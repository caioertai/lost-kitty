<div class="container">
  <p><%= link_to "Back to the list", pets_path %></p>
  <p>Details for</p>
  <h1><%= @pet.name %></h1>
  <dl>
    <dt>Species:</dt>
    <dd><%= @pet.species %></dd>
    <dt>Weigth:</dt>
    <dd><%= @pet.weight %></dd>
    <dt>Micropchipped:</dt>
    <dd><%= @pet.microchipped? ? "Yes" : "No" %></dd>
  </dl>
  <p>
    <!-- DELETE /pets/:id -->
    <%= link_to "Found!", pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
</div>
